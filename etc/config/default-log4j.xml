<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%m%n"/> 
    </layout>
  </appender>

  <logger name="com.cp.build.ant.GetFullyQualifiedClassNameTask">
    <level value="warn"/>
  </logger>

  <logger name="com.cp.build.ant.LastIndexOfTask">
    <level value="warn"/>
  </logger>

  <logger name="com.cp.build.ant.PreferenceTask">
    <level value="warn"/>
  </logger>

  <logger name="com.cp.build.ant.SubstringTask">
    <level value="warn"/>
  </logger>

  <logger name="net.sf.antcontrib.platform.ShellScriptTask">
    <level value="off"/>
  </logger>

  <logger name="org.apache.tools.ant">
    <level value="fatal"/>
  </logger>

  <logger name="org.apache.tools.ant.Project">
    <level value="error"/>
  </logger>

  <logger name="org.apache.tools.ant.Target">
    <level value="error"/>
  </logger>

  <logger name="org.apache.tools.ant.taskdefs">
    <level value="error"/>
  </logger>

  <logger name="org.apache.tools.ant.taskdefs.Cvs">
    <level value="info"/>
  </logger>

  <!--logger name="org.apache.tools.ant.taskdefs.Echo" additivity="false"-->
  <logger name="org.apache.tools.ant.taskdefs.Echo">
    <level value="info"/>
  </logger>

  <logger name="org.apache.tools.ant.taskdefs.Java">
    <level value="info"/>
  </logger>

  <logger name="org.apache.tools.ant.taskdefs.Javac">
    <level value="info"/>
  </logger>

  <logger name="org.apache.tools.ant.taskdefs.optional.junit.JUnitTask">
    <level value="info"/>
  </logger>

  <root>
    <priority value="error"/>
    <!--level value="error"/-->
    <appender-ref ref="console"/>
  </root>

</log4j:configuration>
