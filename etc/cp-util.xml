<project name="cp-util">
  <description>
    cp Ant build and deployment management system (BDMS) configuration file containing utility functions
    and routines (targets) for performing many of the build and deployments tool common operations.
  </description>

  <target name="copy.file.to.dir" description="Copies a user specified file to the user specified directory.">
    <copy file="${file.to.copy}" todir="${destination.dir}" failonerror="true" overwrite="true"/>
  </target>

</project>
